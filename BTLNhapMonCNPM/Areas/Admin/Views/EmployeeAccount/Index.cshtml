
@{
    ViewData["Title"] = "Index";
}
@model List<BTLNhapMonCNPM.Models.TblNhanVien>

@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách nhân viên</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Tên Đăng Nhập</th>
                <th>Họ Tên</th>
                <th>Chức Vụ</th>
                <th>Lương Cơ Bản</th>
                <th>Hệ Số Lương</th>
                <th>Ngày Vào Làm</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nv in Model)
            {
                <tr>
                    <td>@nv.IMaNv</td>
                    <td>@nv.STenDangNhap</td>
                    <td>@nv.SHoTen</td>
                    <td>@nv.SChucVu</td>
                    <td>@nv.FLuongCb.ToString("N2") VNĐ</td>
                    <td>@nv.FHeSoLuong</td>
                    <td>@nv.DNgayVaoLam.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@nv.IMaNv" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@nv.IMaNv" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Thêm Nhân Viên
    </a>
</div>
