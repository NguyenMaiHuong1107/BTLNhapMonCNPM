
@{
    ViewData["Title"] = "ConfirmCheckout";
}

@{
    ViewData["Title"] = "Xác nhận thanh toán";
}

<h2>Xác nhận thanh toán</h2>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.CartItems)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.price.ToString("#,##") VND</td>
                <td>@item.quantity</td>
                @{
                    double finalPrice = (double)@item.price * @item.quantity;
                }
                <td>@finalPrice.ToString("#,## VND")</td>
            </tr>
        }
    </tbody>
</table>

@{
    double money = (double)ViewBag.TotalPrice;
}
<h3>Tổng tiền đơn hàng: @money.ToString("#,##")</h3>

<form method="post" action="/confirm-payment">
    <label for="note" class="mb-2">Ghi chú (nếu có):</label>
    <textarea id="note" name="note" class="form-control"></textarea>

    <button type="submit" class="btn btn-success">Xác nhận thanh toán</button>
</form>


